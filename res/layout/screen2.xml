<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background3"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/whiteBox1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_above="@+id/Googlebutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_above="@+id/Googlebutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" >

        <ImageView
            android:id="@+id/dropboxImage"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_above="@+id/Googlebutton"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/dropboxtitle" />

        <ImageView
            android:id="@+id/greenArrow1"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/green_arrow" />
    </LinearLayout>

    <RadioButton
        android:id="@+id/Dropboxbutton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_above="@+id/Googlebutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:checked="false" />

    <TextView
        android:id="@+id/whiteBox2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/ll1"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="12dp" >

        <ImageView
            android:id="@+id/googleImage"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/googledrivetitle" />

        <ImageView
            android:id="@+id/greenArrow1"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/green_arrow" />
    </LinearLayout>

    <RadioButton
        android:id="@+id/Googlebutton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="9dp"
        android:checked="false" />

    <TextView
        android:id="@+id/whiteBox3"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/Googlebutton"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/ll1"
        android:layout_below="@+id/Googlebutton"
        android:layout_centerInParent="true"
        android:layout_marginBottom="12dp" >

        <ImageView
            android:id="@+id/skydriveImage"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_below="@+id/Googlebutton"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/skydrivetitle" />
        <ImageView
            android:id="@+id/greenArrow1"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/green_arrow" />
    </LinearLayout>

    <RadioButton
        android:id="@+id/Skydrivebutton"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_below="@id/Googlebutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:checked="false" />

    <Button
        android:id="@+id/Upcloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/whiteBox3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="33dp"
        android:background="@drawable/upcloud" />

    <Button
        android:id="@+id/Downcloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Upcloud"
        android:layout_alignRight="@+id/whiteBox3"
        android:layout_marginRight="33dp"
        android:background="@drawable/downcloud" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/whiteBox3"
        android:layout_below="@+id/Downcloud"
        android:layout_marginLeft="27dp"
        android:text="Upload a File"
	android:textColor="FFFFFF" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/whiteBox3"
        android:layout_below="@+id/Downcloud"
        android:layout_marginRight="37dp"
        android:text="Save a File"
	android:textColor="FFFFFF" />

   <ImageView
        android:id="@+id/default_file"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_above="@+id/whiteBox1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:background="@drawable/logo" />


</RelativeLayout>