<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerVertical="true"
    android:background="@drawable/background3"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/whiteBox"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/bLogin"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        android:background="@drawable/signin_box"
        android:text="@string/signIn"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tvHeader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whiteBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/enter"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/dropboxEmail"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/tvHeader1"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/dropboxPassword"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/dropboxEmail"
        android:layout_below="@+id/dropboxEmail"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/dropboxHeader"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_above="@+id/tvHeader1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dropboxtitle" />

    <Button
        android:id="@+id/bLogout"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_alignRight="@+id/whiteBox"
        android:background="@drawable/signout_box"
        android:text="@string/signOut"
        android:textSize="25dp" />

    <Button
        android:id="@+id/bBack"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvHeader1"
        android:layout_alignRight="@+id/whiteBox"
        android:text="@string/back"
        android:textSize="25dp" />

    <Button
        android:id="@+id/bLogin"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@+id/whiteBox"
        android:layout_centerHorizontal="true"
        android:text="@string/login"
        android:textSize="25dp" />

    <Button
        android:id="@+id/bLogout"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/bLogin"
        android:layout_below="@+id/dropboxPassword"
        android:layout_marginTop="16dp"
        android:text="@string/logout"
        android:textSize="25dp" />

</RelativeLayout>